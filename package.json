{
  "name": "@pearson-components/contextual-help",
  "version": "0.0.0",
  "description": "Contextual help for web applications.",
  "scripts": {
    "test": "./node_modules/karma/bin/karma start karma.conf.js",
    "build": "webpack",
    "dev": "webpack-dev-server --devtool eval --hot --progress --colors",
    "version": "npm run gen-changelog && git add CHANGELOG.md",
    "ci": "npm test && npm run build",
    "gen-changelog": "node ./npm_scripts/gen-changelog.js",
    "release": "node ./npm_scripts/release.js",
    "postpublish": "npm access public && echo 'Package scope set to public!'"
  },
  "devDependencies": {
    "conventional-changelog": "^1.1.0",
    "coveralls": "^2.11.4",
    "css-loader": "^0.23.1",
    "expect.js": "^0.3.1",
    "html-loader": "^0.4.3",
    "karma": "^0.13.3",
    "karma-coverage": "^0.2.6",
    "karma-mocha": "^0.1.10",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-webpack": "^1.7.0",
    "mocha": "^2.1.0",
    "node-sass": "^3.4.2",
    "phantomjs-prebuilt": "^2.1.7",
    "sass-loader": "^3.2.0",
    "style-loader": "^0.13.0",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "@pearson-components/drawer": "~0.1.2",
    "dom-delegate": "^2.0.3"
  }
}
